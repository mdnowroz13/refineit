{
  "name": "refineit",
  "version": "1.0.4",
  "description": "Simplify your JS/TS codebase by automatically removing dead files and imports, saving you time and reducing clutter.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdnowroz13/refineit.git"
  },
  "bugs": {
    "url": "https://github.com/mdnowroz13/refineit/issues"
  },
  "homepage": "https://github.com/mdnowroz13/refineit#readme",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "refineit": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "test": "jest",
    "test:ci": "jest --runInBand --reporters=default --reporters=jest-junit",
    "lint": "eslint 'src/**' --ext .ts,.tsx || true",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "check": "npm run build && npm run test"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "cli-table3": "^0.6.3",
    "cosmiconfig": "^9.0.0",
    "figlet": "^1.9.4",
    "glob": "^10.3.10",
    "gradient-string": "^3.0.0",
    "picocolors": "^1.0.0",
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.25",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "prettier": "^3.1.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  }
}
